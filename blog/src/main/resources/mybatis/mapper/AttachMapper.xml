<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.AttachMapper">
	
	<insert id="insert" parameterType="com.blog.domain.AttachVo">
		insert into tbl_attach (uuid, uploadPath, fileName, uploadFile, bno)
			values (#{uuid}, #{uploadPath}, #{fileName}, #{uploadFile}, #{bno})
	</insert>

	<select id="findByBno" resultType="com.blog.domain.AttachVo">
		select * from tbl_attach where bno = #{bno}
	</select>
	
	<delete id="delete" parameterType="long">
		delete from tbl_attach where bno = #{bno}
	</delete>
</mapper>